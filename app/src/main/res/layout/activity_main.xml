<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.puzzle.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:text="Wybierz gre:" />

    <Button
        android:id="@+id/buttonUkladanka"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="ukladanka" />

    <Button
        android:id="@+id/buttonPuzzle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUkladanka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="puzzle" />

    <Button
        android:id="@+id/buttonMemory"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonPuzzle"
        android:layout_alignStart="@+id/buttonPuzzle"
        android:layout_below="@+id/buttonPuzzle"
        android:layout_marginTop="31dp"
        android:text="memory" />

</RelativeLayout>
